<Controls:MetroWindow  x:Class="CFLMedCab.MainWindow"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CFLMedCab"
        xmlns:cvt="clr-namespace:CFLMedCab.Converter"
        mc:Ignorable="d"
        Title="MainWindow"  
        Height="540"
        MinHeight="540" 
        Width="960"
        MinWidth ="960"
        WindowStyle="None">
    <Control.Resources>
        <cvt:LoginInfoFGBrushConverter x:Key="LoginInfoFGBrushConverter"/>
        <cvt:LoginStatusImgResConverter x:Key="LoginStatusImgResConverter"/>
    </Control.Resources>
    <Grid  Height="540"
        MinHeight="540" 
        Width="960"
        MinWidth ="960">
        <Grid x:Name="LoginBk" Visibility="Hidden">
            <Image Height="Auto" Width="Auto" >
                <Image.Source>
                    <BitmapImage UriSource="/CFLMedCab;component/Resources/Images/login.png" />
                </Image.Source>
            </Image>
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" Margin="0,230,0,0"  FontFamily="Microsoft YaHei UI" FontWeight="Bold" FontSize="28" 
                       Foreground="#FFFFFF" Text="欢迎使用乘法云链耗材管理系统"/>
                <TextBlock HorizontalAlignment="Center" Margin="0,31,0,0"  FontFamily="Microsoft YaHei UI" FontWeight="Bold" FontSize="23" 
                       Foreground="#FFFFFF" Text="请您使用指静脉登录进行操作"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="LoginInfo" Width="355" Height="260" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Hidden">
            <Border  CornerRadius="3,3,3,3" Background="{StaticResource LoginBkBrush}">
                <StackPanel>
                    <Image  Width="194" Height="110" HorizontalAlignment="Center" Margin="0,48,0,0" 
                            Source="{Binding LoginStatus, Converter={StaticResource LoginStatusImgResConverter}}"/>
                    <TextBlock HorizontalAlignment="Center" Margin="0,23,0,0" FontFamily="Microsoft YaHei UI" FontWeight="Regular" FontSize="17" 
                               Foreground="{Binding LoginStatus, Converter= {StaticResource LoginInfoFGBrushConverter}}" Text= "{Binding LoginString }"/>
                    <TextBlock HorizontalAlignment="Center" Margin="0,17,0,0" FontFamily="Microsoft YaHei UI" FontWeight="Regular" FontSize="18" 
                               Foreground="#333333" Text="{Binding LoginString2}"/>
                </StackPanel>
            </Border>
        </Grid>
        <Grid x:Name="FrameView" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height ="43"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid>
            </Grid>
            <Grid Grid.Column="1" x:Name="UserView">
                <TextBlock Height="Auto"
                    Margin="514,12,196,10"
                    x:Name="tbDateText"
                    Foreground="Black"
                    FontWeight="Bold"
                    FontFamily="Arial"
                    FontSize="15" />
                <TextBlock Height="Auto"
                    Margin="641,12,100,10"
                    x:Name="tbTimeText"
                    Foreground="Black"
                    FontWeight="Bold"
                    FontFamily="Calibri"
                    FontSize="15" />
            </Grid>
            <Grid Grid.Row="1" x:Name="NavBar" Background="{StaticResource NavBgGreyBrush}">
                <Grid VerticalAlignment="Top">
                    <RadioButton Style="{DynamicResource MainNavButton}" Height="50"  Margin="0,14,0,0" VerticalAlignment="Top" Foreground="White" Content="一般领用"  Click="EnterGerFetch"  IsChecked="True"/>
                    <RadioButton Style="{DynamicResource MainNavButton}" Height="50"  Margin="0,64,0,0" VerticalAlignment="Top"  Foreground="White" Content="手术领用" Click="OperationCollarUse" />
                    <RadioButton Style="{DynamicResource MainNavButton}" Height="50"  Margin="0,114,0,0" VerticalAlignment="Top"  Foreground="White" Content="领用退回" Click="EnterGerFetch"/>
                    <RadioButton Style="{DynamicResource MainNavButton}" Height="50"  Margin="0,164,0,0" VerticalAlignment="Top"  Foreground="White" Content="补货入库" Click="Replenishment" />
                    <RadioButton Style="{DynamicResource MainNavButton}" Height="50"  Margin="0,214,0,0" VerticalAlignment="Top"  Foreground="White" Content="退货出库" Click="ReturnGoods" />
                    <RadioButton Style="{DynamicResource MainNavButton}" Height="50"  Margin="0,264,0,0" VerticalAlignment="Top"  Foreground="White" Content="库存盘点" Click="Inventory"/>
                    <RadioButton Style="{DynamicResource MainNavButton}" Height="50"  Margin="0,314,0,0" VerticalAlignment="Top"  Foreground="White" Content="库存查询" Click="Stock" />
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1" x:Name="ContentView">
                <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" Panel.ZIndex="0"/>
            </Grid>
        </Grid>
    </Grid>
</Controls:MetroWindow>

<UserControl x:Class="CFLMedCab.View.OperationCollarUse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CFLMedCab.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue">
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="430" Width="780" Background="White"/>
        <Label Content="请输入手术单号或扫描手术单二维码" HorizontalAlignment="Left" Margin="43,53,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="17"/>
        <TextBox HorizontalAlignment="Left" Name="tbOddNumbers" Height="91" Margin="52,90,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="680"/>
        <Button Content="暂无手术单号" HorizontalAlignment="Left" Margin="454,206,0,0" BorderBrush="#619CF8" Foreground="#619CF8" FontSize="15" VerticalAlignment="Top" Width="113" Height="32" Click="Button_Click"/>
        <Button Content="查询" Style="{DynamicResource RightAngleNavButton}" HorizontalAlignment="Left" Margin="619,206,0,0" VerticalAlignment="Top"/>
        <Grid Grid.Row="0" Grid.Column="0" x:Name="ContentView"/>
    </Grid>
</UserControl>

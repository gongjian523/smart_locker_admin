<UserControl x:Class="CFLMedCab.View.Fetch.SurgeryNumClose"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CFLMedCab.View.Fetch"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="900">
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Background="White" Grid.Row="0" Margin="20,20,20,10" >

            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="28"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="28"></RowDefinition>
                    <RowDefinition Height="28"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Content="业务类型" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" />
                <Label Content="手术领用" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" />
                <Label Content="操作人" Grid.Row="2" Grid.Column="0" />
                <Label Content="Label" Name="Operator" Grid.Row="3" Grid.Column="0"  />
                <Label Content="手术单号" Grid.Row="2" Grid.Column="1" />
                <Label Content="Label" Name="lNum"  Grid.Row="4" Grid.Column="1" />
                <Label Content="操作日期" Grid.Row="2" Grid.Column="2" />
                <Label Content="Label" Name="time" Grid.Row="4" Grid.Column="2" />
            </Grid>
        </StackPanel>
        <StackPanel Background="White" Margin="20,10,20,20" Grid.Row="1">

            <Grid Margin="20" x:Name="GridValue">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                   
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"  />
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" x:Name="gcolumn1"/>
                        <Grid Grid.Column="1" x:Name="gcolumn2"/>
                        <Grid Grid.Column="2" x:Name="gcolumn3"/>
                        <Grid Grid.Column="3" x:Name="gcolumn4"/>
                        <Grid Grid.Column="4" x:Name="gcolumn5"/>
                        <Grid Grid.Column="5" x:Name="gcolumn6"/>
                    </Grid>

                    <Label HorizontalAlignment="Left" Grid.Row="0" Content="sssssss" Grid.Column="0" VerticalAlignment="Center" Background="{DynamicResource TipBgColor}" Height="40" Width="{Binding ElementName=GridValue,Path=ActualWidth}"/>
                    <Label Content="本柜待领用商品" Grid.Row="1" Grid.Column="0" Height="30"  HorizontalAlignment="Left"  VerticalAlignment="Top" />
                    <ListView  VerticalAlignment="Bottom" Grid.Row="2" Grid.Column="0" ItemsSource="{Binding}" Name="listView" HorizontalAlignment="Center">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="商品名称" DisplayMemberBinding="{Binding Path=name}" Width="{Binding ElementName=gcolumn1,Path=ActualWidth}"/>
                                <GridViewColumn Header="商品码" DisplayMemberBinding="{Binding Path=code}" Width="{Binding ElementName=gcolumn2,Path=ActualWidth}"/>
                                <GridViewColumn Header="领用属性" DisplayMemberBinding="{Binding Path=status}" Width="{Binding ElementName=gcolumn3,Path=ActualWidth}"/>
                                <GridViewColumn Header="待领用数量" DisplayMemberBinding="{Binding Path=id}"  Width="{Binding ElementName=gcolumn4,Path=ActualWidth}"/>
                                <GridViewColumn Header="本柜库存数量" DisplayMemberBinding="{Binding Path=inventory_time}" Width="{Binding ElementName=gcolumn5,Path=ActualWidth}"/>
                                <GridViewColumn Header="备注" DisplayMemberBinding="{Binding Path=status}" Width="{Binding ElementName=gcolumn6,Path=ActualWidth}"/>

                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>

                <Separator Margin="0,30" Grid.Row="1" Background="{x:Null}"/>

                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" x:Name="column1"/>
                        <Grid Grid.Column="1" x:Name="column2"/>
                        <Grid Grid.Column="2" x:Name="column3"/>
                        <Grid Grid.Column="3" x:Name="column4"/>
                        <Grid Grid.Column="4" x:Name="column5"/>
                        <Grid Grid.Column="5" x:Name="column6"/>
                        <Grid Grid.Column="6" x:Name="column7"/>
                        <Grid Grid.Column="7" x:Name="column8"/>
                        <Grid Grid.Column="8" x:Name="column9"/>
                        <Grid Grid.Column="9" x:Name="column10"/>
                        <Grid Grid.Column="10" x:Name="column11"/>
                        <Grid Grid.Column="11" x:Name="column12"/>
                    </Grid>

                    <Label Content="本次操作明细" Grid.Row="0"  Grid.Column="0" Grid.ColumnSpan="12" Height="30" Width="auto" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <ListView  VerticalAlignment="Bottom" Grid.Row="1"  ItemsSource="{Binding}" Name="listView1" HorizontalAlignment="Center" >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="商品码" DisplayMemberBinding="{Binding Path=goods_code}"  Width="{Binding ElementName=column1,Path=ActualWidth}" />
                                <GridViewColumn Header="商品名称" DisplayMemberBinding="{Binding Path=name}" Width="{Binding ElementName=column2,Path=ActualWidth}"/>
                                <GridViewColumn Header="单品码" DisplayMemberBinding="{Binding Path=code}" Width="{Binding ElementName=column3,Path=ActualWidth}"/>
                                <GridViewColumn Header="批号" DisplayMemberBinding="{Binding Path=batch_number}"  Width="{Binding ElementName=column4,Path=ActualWidth}" />
                                <GridViewColumn Header="生产日期" DisplayMemberBinding="{Binding Path=birth_date}" Width="{Binding ElementName=column5,Path=ActualWidth}"/>
                                <GridViewColumn Header="有效期至" DisplayMemberBinding="{Binding Path=expiry_date}" Width="{Binding ElementName=column6,Path=ActualWidth}"/>
                                <GridViewColumn Header="失效期" DisplayMemberBinding="{Binding Path=fetch_type}"  Width="{Binding ElementName=column7,Path=ActualWidth}"/>
                                <GridViewColumn Header="操作类型" DisplayMemberBinding="{Binding Path=remarks}" Width="{Binding ElementName=column8,Path=ActualWidth}"/>
                                <GridViewColumn Header="领用属性" DisplayMemberBinding="{Binding Path=status}" Width="{Binding ElementName=column9,Path=ActualWidth}"/>
                                <GridViewColumn Header="异常标识" DisplayMemberBinding="{Binding Path=id}"  Width="{Binding ElementName=column10,Path=ActualWidth}" />
                                <GridViewColumn Header="异常说明" DisplayMemberBinding="{Binding Path=inventory_time}" Width="{Binding ElementName=column11,Path=ActualWidth}"/>
                                <GridViewColumn Header="备注" DisplayMemberBinding="{Binding Path=status}" Width="{Binding ElementName=column12,Path=ActualWidth}"/>

                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Grid>


        </StackPanel>
        <StackPanel Background="White" Margin="20,10,20,20" Grid.Row="2" Height="100">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Content="是否结束本次操作？" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Button Content="是" HorizontalAlignment="Right" Margin="0,0,20,0"  Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Width="75" Click="onEndOperation"/>
                <Button Content="否" HorizontalAlignment="Left" Margin="20,0,0,0"  Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Width="75" Click="onNoEndOperation"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>

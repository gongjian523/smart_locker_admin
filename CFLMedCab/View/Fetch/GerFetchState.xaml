<UserControl x:Class="CFLMedCab.View.Fetch.GerFetchState"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CFLMedCab.View.Fetch"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid  Background="{StaticResource ContentBkBrush}">
        <StackPanel Orientation="Vertical">
            <Image Width="194" Height="126" HorizontalAlignment="Center"  Margin="0,320,0,0"  >
                <Image.Source>
                    <BitmapImage x:Name="infoImage" UriSource="/CFLMedCab;component/Resources/Images/OpenDoor.png"/>
                </Image.Source>
            </Image>
            <Label Content="柜门已开"  HorizontalAlignment="Center" Margin="0,18,0,0" FontSize="40" Foreground="#619CF8"/>
            <Label x:Name="attention"  Content=""  HorizontalAlignment="Center" Margin="0,12,0,0" FontSize="32" Foreground="#333333"/>
        </StackPanel>
    </Grid>
</UserControl>

<UserControl x:Class="CFLMedCab.View.ReplenishmentOrder.ReplenishmentDetailOpen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CFLMedCab.View.ReplenishmentOrder"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue">
        <Grid Background="White" Margin="32,29,32,280">
            <Label Content="业务类型" Margin="10,10,636,108" FontSize="9"/>
            <Label Name="lType" Content="补货入库" Margin="10,38,636,77" FontSize="14"/>
            <Label Content="操作人" HorizontalAlignment="Left" Margin="13,69,0,0" VerticalAlignment="Top" FontSize="9"/>
            <Label Content="Label" Name="principal" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top" Height="25"/>
            <Label Content="上架工单号" HorizontalAlignment="Left" Margin="173,69,0,0" VerticalAlignment="Top"  FontSize="9"/>
            <Label Content="Label" Name="workOrderNum" HorizontalAlignment="Left" Margin="173,95,0,0" VerticalAlignment="Top" Height="25"/>
        </Grid>

        <Grid Margin="32,187,32,58" Background="White">
            <Label Content="本柜待上架商品" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <ListView Margin="20,0,20,48" VerticalAlignment="Bottom" Name="listView" ItemsSource="{Binding}" HorizontalAlignment="Center"  MinHeight="100" Width="640" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="商品码" DisplayMemberBinding="{Binding goods_code}"  Width="90"/>
                        <GridViewColumn Header="商品名称" DisplayMemberBinding="{Binding name}" Width="90"/>
                        <GridViewColumn Header="单品码" DisplayMemberBinding="{Binding code}" Width="90"/>
                        <GridViewColumn Header="货位" DisplayMemberBinding="{Binding remarks}" Width="90"/>
                        <GridViewColumn Header="失效期" DisplayMemberBinding="{Binding expire_date}" Width="90"/>
                        <GridViewColumn Header="领用属性" DisplayMemberBinding="{Binding position}" Width="90"/>
                        <GridViewColumn Header="备注" DisplayMemberBinding="{Binding remarks}" Width="90"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</UserControl>

<UserControl x:Class="CFLMedCab.View.OpenCabinet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CFLMedCab.View"
      xmlns:cvt="clr-namespace:CFLMedCab.Converter"
      mc:Ignorable="d">
    <Grid Height="489" Width="780">
        <Border  CornerRadius="3,3,3,3" Background="{StaticResource LoginBkBrush}">
            <StackPanel>
                <Image Width="387" Height="252" HorizontalAlignment="Center" Margin="0,89,0,0" >
                    <Image.Source>
                        <BitmapImage UriSource="/CFLMedCab;component/Resources/Images/OpenDoor.png" />
                    </Image.Source>
                </Image>
                <Label Content="柜门已开"  HorizontalAlignment="Center" Margin="0,35,0,0" FontSize="40" Foreground="#619CF8"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

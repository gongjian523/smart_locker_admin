<UserControl x:Class="CFLMedCab.View.Inventory.StockDetailed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CFLMedCab.View.Inventory"
             mc:Ignorable="d" >
    <Grid Background="AliceBlue" Height="400" Width="600">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Height="34" Grid.Row="0" Content="库存" />
        <ListView  VerticalAlignment="Bottom"  Grid.Row="1"  ItemsSource="{Binding}" Name="listView" HorizontalAlignment="Center" Width="560" Margin="10,0,30,87" Height="273">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="商品编码" DisplayMemberBinding="{Binding Path=goods_name}" Width="70"/>
                    <GridViewColumn Header="商品名称" DisplayMemberBinding="{Binding Path=goods_code}" Width="70"/>
                    <GridViewColumn Header="单品码" DisplayMemberBinding="{Binding Path=fetch_type}" Width="70"/>
                    <GridViewColumn Header="批号" DisplayMemberBinding="{Binding Path=wait_num}"  Width="70"/>
                    <GridViewColumn Header="失效期" DisplayMemberBinding="{Binding Path=stock_num}" Width="70"/>
                    <GridViewColumn Header="领用属性" DisplayMemberBinding="{Binding Path=remarks}" Width="70"/>
                    <GridViewColumn Header="货位" DisplayMemberBinding="{Binding Path=stock_num}" Width="70"/>
                    <GridViewColumn Header="备注" DisplayMemberBinding="{Binding Path=remarks}" Width="70"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="确认" HorizontalAlignment="Left" Margin="266,315,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="onStockEvent"/>
    </Grid>
</UserControl>

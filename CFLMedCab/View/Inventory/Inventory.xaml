<UserControl x:Class="CFLMedCab.View.Inventory.Inventory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CFLMedCab.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{StaticResource ContentBkBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="149"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Background="#29A8EF" Margin="20,20,10,0" CornerRadius="2,2,2,2">
            <Grid>
                <Label HorizontalAlignment="Center" Margin="0,34,0,0" FontSize="19" FontWeight="Regular" Foreground="#FFFFFF" Content="手动盘点" />
                <Button Style="{DynamicResource RoundButton}"  HorizontalAlignment="Center"  Margin="0,75,0,0" BorderThickness="0"  Width="113"  Height="32"  
                        Background="#FFFFFF"  Foreground="#29A8EF" FontSize="14" Content="盘点"  Click="onEnterPopInventory" />
            </Grid>
        </Border>
        <Border Grid.Column="1" Background="#27CDCB" Margin="10,20,20,0" CornerRadius="2,2,2,2">
            <Grid>
                <Label HorizontalAlignment="Center" Margin="0,24,0,0" FontSize="19" FontWeight="Regular" Foreground="#FFFFFF" Content="自动盘点" />
                <Label HorizontalAlignment="Center" Margin="0,55,0,0" FontSize="13" FontWeight="Regular" Foreground="#FFFFFF" Content="下一次自动盘点时间："   />
                <Button Style="{DynamicResource RoundButton}"  HorizontalAlignment="Center"  Margin="0,75,0,0" BorderThickness="0"  Width="113"  Height="32"  
                        Background="#FFFFFF"  Foreground="#27CDCB" FontSize="14" Content="盘点计划设置"  Click="onEnterPopInventoryPlan" />
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Background="#FFFFFF" Margin="20,20,20,20" CornerRadius="2,2,2,2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid>
                    <StackPanel Orientation="Horizontal" Margin="20,5,20,0">
                        <RadioButton Style="{StaticResource TabButton}"  Width="70"  Content="待确认"  FontSize="16"  IsChecked="True"/>
                        <RadioButton Style="{StaticResource TabButton}"  Width="70"  Content="已确认"  FontSize="16"/>
                        <RadioButton Style="{StaticResource TabButton}"  Width="70"  Content="全部"  FontSize="16"/>
                    </StackPanel>
                    <Label Margin="20,49,20,0" Background="{StaticResource ContentBkBrush}" Width="auto" Height="1"/>
                </Grid>
                <Grid Grid.Row="1" x:Name="ContentView">

                    <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" x:Name="column1"/>
                        <Grid Grid.Column="1" x:Name="column2"/>
                        <Grid Grid.Column="2" x:Name="column3"/>
                        <Grid Grid.Column="3" x:Name="column4"/>
                        <Grid Grid.Column="4" x:Name="column5"/>
                        <Grid Grid.Column="5" x:Name="column6"/>
                        <Grid Grid.Column="6" x:Name="column7"/>
                        <Grid Grid.Column="7" x:Name="column8"/>
                        <Grid Grid.Column="8" x:Name="column9"/>
                    </Grid>

                    <ListView  Margin="10" Grid.Row="1" Grid.ColumnSpan="3"  VerticalAlignment="Top" ItemsSource="{Binding}" Name="listView" HorizontalAlignment="Left" Width="auto" Padding="20">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="盘点单号" DisplayMemberBinding="{Binding id}"   Width="{Binding ElementName=column1,Path=ActualWidth}"/>
                                <GridViewColumn Header="盘点日期" DisplayMemberBinding="{Binding birth_date}"    Width="{Binding ElementName=column2,Path=ActualWidth}"/>
                                <GridViewColumn Header="盘点类型" DisplayMemberBinding="{Binding fetch_type}"   Width="{Binding ElementName=column3,Path=ActualWidth}"/>
                                <GridViewColumn Header="盘点结果" DisplayMemberBinding="{Binding wait_collar}"   Width="{Binding ElementName=column4,Path=ActualWidth}"/>
                                <GridViewColumn Header="盘点单状态" DisplayMemberBinding="{Binding already_led}"   Width="{Binding ElementName=column5,Path=ActualWidth}"/>
                                <GridViewColumn Header="盘点人" DisplayMemberBinding="{Binding already_led}"   Width="{Binding ElementName=column6,Path=ActualWidth}"/>
                                <GridViewColumn Header="确认人" DisplayMemberBinding="{Binding already_led}"   Width="{Binding ElementName=column7,Path=ActualWidth}"/>
                                <GridViewColumn Header="确认日期" DisplayMemberBinding="{Binding already_led}"   Width="{Binding ElementName=column8,Path=ActualWidth}"/>
                                <GridViewColumn Header="操作" DisplayMemberBinding="{Binding remarks}"   Width="{Binding ElementName=column9,Path=ActualWidth}">
                                    <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                            <!--<Button Width="30" Content="确认" Click="Button_Click"/>-->

                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Grid>
        </Border>

    </Grid>
</UserControl>

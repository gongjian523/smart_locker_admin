<UserControl x:Class="CFLMedCab.View.Inventory.Inventory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CFLMedCab.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{StaticResource ContentBkBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="149"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Background="#29A8EF" Margin="20,20,10,0" CornerRadius="2,2,2,2">
            <Grid>
                <Label HorizontalAlignment="Center" Margin="0,34,0,0" FontSize="19" FontWeight="Regular" Foreground="#FFFFFF" Content="手动盘点" />
                <Button Style="{DynamicResource RoundButton}"  HorizontalAlignment="Center"  Margin="0,75,0,0" BorderThickness="0"  Width="113"  Height="32"  
                        Background="#FFFFFF"  Foreground="#29A8EF" FontSize="14" Content="盘点"  Click="onEnterPopInventory" />
            </Grid>
        </Border>
        <Border Grid.Column="1" Background="#27CDCB" Margin="10,20,20,0" CornerRadius="2,2,2,2">
            <Grid>
                <Label HorizontalAlignment="Center" Margin="0,24,0,0" FontSize="19" FontWeight="Regular" Foreground="#FFFFFF" Content="自动盘点" />
                <Label HorizontalAlignment="Center" Margin="0,55,0,0" FontSize="13" FontWeight="Regular" Foreground="#FFFFFF" Content="下一次自动盘点时间："   />
                <Button Style="{DynamicResource RoundButton}"  HorizontalAlignment="Center"  Margin="0,75,0,0" BorderThickness="0"  Width="113"  Height="32"  
                        Background="#FFFFFF"  Foreground="#27CDCB" FontSize="14" Content="盘点计划设置"  Click="onEnterPopInventoryPlan" />
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Background="#FFFFFF" Margin="20,20,20,20" CornerRadius="2,2,2,2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid>
                    <StackPanel Orientation="Horizontal" Margin="20,5,20,0">
                        <RadioButton Style="{StaticResource TabButton}"  Width="70"  Content="待确认"  FontSize="16"  IsChecked="True"/>
                        <RadioButton Style="{StaticResource TabButton}"  Width="70"  Content="已确认"  FontSize="16"/>
                        <RadioButton Style="{StaticResource TabButton}"  Width="70"  Content="全部"  FontSize="16"/>
                    </StackPanel>
                    <Label Margin="20,49,20,0" Background="{StaticResource ContentBkBrush}" Width="auto" Height="1"/>
                </Grid>
                <Grid Grid.Row="1" x:Name="InventoryList">
                    <Grid.Resources>
                        <!--<DataTemplate x:Key="logItem" >
                            <Grid x:Name="itmeGrid" Height="36">
                                <TextBlock Margin="5,0,0,0" Width="90"  VerticalAlignment="Center" HorizontalAlignment="Left" 
                               Text="{Binding Date, StringFormat={}{0:yyyy/MM/dd}}" FontSize="16"/>
                                <TextBlock Margin="100,0,186,0" VerticalAlignment="Center"  HorizontalAlignment="Stretch" 
                               Text="{Binding Info}" FontSize="16"/>
                                <TextBlock Margin="0,0,60,0" VerticalAlignment="Center" HorizontalAlignment="Right"  Width="80"  
                               Text="{Binding Price, StringFormat={}{0:}元 }" FontSize="16"/>
                                <ctrls:IconBtn  x:Name="editBtn" Style="{DynamicResource IconButtonStyle}" Margin="0,0,33,0"  HorizontalAlignment="Right"  
                               Click="EidtLogItem" Tag="{Binding}" ToolTip="编辑日志" IconCanvas="{DynamicResource appbar_edit}"/>
                                <ctrls:IconBtn  x:Name="delBtn" Style="{DynamicResource IconButtonStyle}" Margin="0,0,10,0" HorizontalAlignment="Right"  
                               Click="DelLogItem" Tag="{Binding}" ToolTip="删除日志" IconCanvas="{DynamicResource appbar_delete}"/>
                            </Grid>
                        </DataTemplate>-->
                    </Grid.Resources>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemTemplate="{StaticResource logItem}" ItemsSource="{Binding LogList}"/>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>

    </Grid>
</UserControl>

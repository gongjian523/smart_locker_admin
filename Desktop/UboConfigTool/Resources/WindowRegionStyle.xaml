<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro">
    <Style x:Key="WindowRegionStyle" TargetType="Controls:MetroWindow">
        <Setter Property="ShowInTaskbar" Value="False"/>
        <Setter Property="ShowTitleBar" Value="False"/>
        <Setter Property="ShowCloseButton" Value="False"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="SizeToContent" Value="WidthAndHeight"/>
        <Setter Property="IsWindowDraggable" Value="False"/>
        <Setter Property="GlowBrush" Value="Black"/>
    </Style>
</ResourceDictionary>
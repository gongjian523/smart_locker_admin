<UserControl x:Class="UboConfigTool.View.NewUserWizard_AddUSBs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="700">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
            <TextBlock FontSize="24" HorizontalAlignment="Center" Style="{DynamicResource uboDefaultTextBlock}">请为群《研发部》添加USB</TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="1" Margin="0,10,0,0" Style="{DynamicResource uboDefaultTextBlock}" FontSize="16" Text="检测到7个USB" HorizontalAlignment="Left"/>
                <ListBox Height="230" Grid.Column="1" Margin="0,36,0,0" Width="400" HorizontalAlignment="Center" BorderBrush="Gray" BorderThickness="0.5">
            </ListBox>
    </Grid>
    </StackPanel>
    </Grid>
</UserControl>

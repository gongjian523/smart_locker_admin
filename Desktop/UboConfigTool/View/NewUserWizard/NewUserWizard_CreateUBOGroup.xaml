<UserControl x:Class="UboConfigTool.View.NewUserWizard_CreateUBOGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             d:DesignHeight="500" d:DesignWidth="300" >
    <Grid>
        <StackPanel Orientation="Vertical" Margin="0,30,0,0">
            <TextBlock FontSize="24" HorizontalAlignment="Center" Style="{DynamicResource uboDefaultTextBlock}">新建UBO群组</TextBlock>
            <Border Height="60" Width="480" Margin="0,80,0,0" Background="White" BorderBrush="Gray" BorderThickness="1">
                <TextBox x:Name="txbGroupName" BorderBrush="Transparent" Margin="10,0,0,0" BorderThickness="0"
                         FontFamily="Microsoft YaHei UI Light" VerticalAlignment="Center" FontSize="16" Controls:TextBoxHelper.Watermark="推荐以部门命名"/>
            </Border>
            <TextBlock x:Name="errorMsg" Style="{DynamicResource uboDefaultTextBlock}" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Red" Text=""/>
        </StackPanel>
    </Grid>
</UserControl>
